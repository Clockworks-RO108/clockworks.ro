---
import type { GetImageResult } from "astro";

import { Carousel as BaseCarousel, Card } from "../ui";

export type Props = {
	images: GetImageResult[];
};

const { images } = Astro.props;
---

<Card.Root
	variant="alternative"
	shape="square"
	className="flex items-center justify-center"
>
	<BaseCarousel images={images} client:visible />
</Card.Root>
