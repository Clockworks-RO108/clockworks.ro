---
import { Text, VStack } from "~/components/ui";

export type Props = {
	title: string;
	subtitle: string;
};
const { title, subtitle } = Astro.props;
---

<VStack inline alignment="start/center" className="gap-y-2 border-l pl-8 lg:gap-y-4">
	<Text.H3>{title}</Text.H3>
	<Text.Small className="lg:text-base">{subtitle}</Text.Small>
</VStack>
