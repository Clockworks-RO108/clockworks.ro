---
import {
	Center,
	CTAButton,
	Flex,
	Grid,
	Section as SectionLayout,
	Text,
} from "~/components/ui";
import Callout from "./callout.astro";
import { cn } from "~/lib";
---

<!-- TODO add content -->
<SectionLayout className="relative">
	<div
		class={cn(
			"bg-gradient",
			"pointer-events-none absolute inset-0 select-none overflow-visible",
		)}
	>
	</div>

	<Center className="absolute left-0 h-full w-screen lg:w-[50vw]">
		<Flex className="max-w-prose gap-y-20 px-8 lg:pl-11">
			<Flex className="gap-6 text-center lg:text-start">
				<Text.H1
					gradient="to-top"
					className="from-off-white-300 to-off-white-100 font-inter font-bold leading-tight tracking-tight"
				>
					Construim roboti si o facem bine
				</Text.H1>
				<Text.P className="text-sm text-text-secondary lg:text-base">
					Lorem ipsum dolor sit amet consectetur adipisicing elit. Saepe esse officia
					exercitationem, enim cumque adipisci porro ut aspernatur eum, est iusto tempora
					inventore at, quam minus possimus nisi voluptates! Cumque?
				</Text.P>

				<CTAButton href="/work">Descopera proiectele noastre</CTAButton>
			</Flex>

			<Grid cols={2} rows={2} className="w-full gap-6 lg:gap-8">
				<Callout title="Title 1" subtitle="some small text" />
				<Callout title="Title 2" subtitle="some small text" />
				<Callout title="Title 3" subtitle="some small text" />
				<Callout title="Title 4" subtitle="some small text" />
			</Grid>
		</Flex>
	</Center>

	<!-- TODO add code-block -->
	<div
		class="absolute right-0 top-[10vh] hidden h-[90vh] w-[35vw] rounded-lg border border-border bg-dark-blue-900/90 p-8 ring-2 ring-off-white-900/20 lg:block"
	>
		code
	</div>
</SectionLayout>

<style>
	.bg-gradient::before {
		--page-edge: calc((100vw - 1200px) / 2);
		content: "";
		position: absolute;
		opacity: 0.25;
		top: 50%;
		left: 50%;
		transform: translate(-50%, -50%) translateZ(0px);
		width: calc(100vw - 50px);
		height: 100vh;
		filter: blur(80px);
		background: radial-gradient(
				400px circle at calc(100% - var(--page-edge) - 10%) 45%,
				hsl(var(--brand-secondary)),
				70%,
				transparent
			),
			radial-gradient(400px circle at 50% 55%, hsl(var(--brand)), 60%, transparent),
			radial-gradient(
				350px circle at calc(var(--page-edge) + 15%) 40%,
				#0c0c0e,
				60%,
				transparent
			);
	}
</style>
