---
import Callout from "./callout.astro";
import Codeblock from "./codeblock.astro";

import BgGradient from "~/components/bg-gradient.astro";
import {
	Center,
	CTAButton,
	Flex,
	Grid,
	HStack,
	Section as SectionLayout,
	Text,
} from "~/components/ui";
import { getTranslations } from "~/lib";

const lang = Astro.params.lang;
const t = getTranslations(lang);
---

<!-- TODO add content -->
<SectionLayout className="relative">
	<BgGradient />

	<Center className="absolute left-0 h-full w-screen lg:w-[50vw]">
		<HStack className="max-w-prose gap-y-20 px-8 lg:pl-11">
			<Flex className="gap-6">
				<Text.H2
					gradient="to-top"
					align="center"
					className="from-off-white-300 to-off-white-100 lg:text-start"
				>
					{t("index.about-us.title")}
				</Text.H2>

				<Text.Small>
					{t("index.about-us.description")}
				</Text.Small>

				<CTAButton href={`${lang}/work`}>{t("index.about-us.cta-button")}</CTAButton>
			</Flex>

			<!-- <Grid cols={2} rows={2} stretch="width" className="gap-6 lg:gap-8">
				<Callout title="Title 1" subtitle="some small text" />
				<Callout title="Title 2" subtitle="some small text" />
				<Callout title="Title 3" subtitle="some small text" />
				<Callout title="Title 4" subtitle="some small text" />
			</Grid> -->
		</HStack>
	</Center>

	<Codeblock />
</SectionLayout>
