---
import codeblockImage from "~/assets/codeblock/codeblock.gif";
import { Card, Center, Grid, HStack } from "~/components/ui";
---

<Card.Root
	className="pointer-events-none absolute right-4 top-[10vh] hidden h-[90vh] w-[35vw] select-none bg-dark-blue-900 p-8 lg:block"
>
	<Grid stretch="width" cols={3} className="absolute left-0 top-0 my-4 pl-8">
		<HStack className="gap-2">
			<div class="h-3 w-3 rounded-full bg-red-400"></div>
			<div class="h-3 w-3 rounded-full bg-yellow-400"></div>
			<div class="h-3 w-3 rounded-full bg-green-400"></div>
		</HStack>

		<Center>
			<p class="font-jetbrains-mono text-xs text-text-secondary">~/clockworks</p>
		</Center>
	</Grid>

	<img
		src={codeblockImage.src}
		width={codeblockImage.width}
		height={codeblockImage.height}
		decoding="async"
		loading="lazy"
		alt=""
	/>
</Card.Root>
