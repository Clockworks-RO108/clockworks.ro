---
import Codeblock from "./codeblock.astro";

import BgGradient from "~/components/bg-gradient.astro";
import {
	Center,
	CTAButton,
	Flex,
	HStack,
	Section as SectionLayout,
	Text,
} from "~/components/ui";
import { getTranslations } from "~/lib";

const lang = Astro.params.lang;
const t = getTranslations(lang);
---

<SectionLayout className="relative h-auto lg:h-auto">
	<BgGradient />

	<Center className="absolute left-0 h-full w-screen lg:w-[50vw]">
		<HStack className="max-w-prose gap-y-20 px-8 lg:pl-11">
			<Flex className="gap-6">
				<Text.H2
					gradient="to-top"
					align="center"
					className="from-off-white-300 to-off-white-100 lg:text-start"
				>
					{t("index.about-us.title")}
				</Text.H2>

				<Text.P className="text-text-secondary">
					{t("index.about-us.description")}
				</Text.P>

				<CTAButton href={`/${lang}/projects`}>{t("index.about-us.cta-button")}</CTAButton>
			</Flex>
		</HStack>
	</Center>

	<Codeblock />
</SectionLayout>
