---
import ActivitySection from "./_activity-section.astro";
import DescriptionSection from "./_description-section.astro";
import HeadSection from "./_head-section.astro";
import HistorySection from "./_history-section.astro";

import DepartmentsSection from "~/components/departments/section.astro";
import Layout from "~/components/ui/layout.astro";
import { generateStaticPaths, getTranslations } from "~/lib";

export const getStaticPaths = generateStaticPaths;

const t = getTranslations(Astro.params.lang);
---

<Layout title={t("navLink.about")}>
	<HeadSection />

	<DescriptionSection />

	<ActivitySection />

	<HistorySection />

	<DepartmentsSection withCTA={false} />
</Layout>
